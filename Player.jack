class Player {
	field String name;
	field int points;
	
	constructor Player new(String Aname) {
		let name = Aname;
		let points = 0;
		return this;
	}
	
	method String getName(){
		return name;
	}
	
	method int getPoints(){
		return points;
	}
	
	method void incPoint(){
		let points = points + 1;
		return;	
	}
}
